model Review {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  score       Float?
  description String   @db.VarChar(10000)
  authorId    String
  game        Game     @relation(fields: [gameId], references: [id])
  gameId      Int

  @@unique([authorId, gameId])
  @@index([authorId])
  @@index([gameId])
}

